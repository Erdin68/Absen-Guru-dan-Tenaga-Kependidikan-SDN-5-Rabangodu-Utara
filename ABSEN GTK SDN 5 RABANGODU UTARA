    <script>
        // Ganti link di bawah ini dengan link Google Forms Anda
        const formLinks = {
            hadir: "https://forms.gle/L46w7vPifDvEyrjF8",
            pulang: "https://forms.gle/Wu5WujkEoKEd2QX58", 
            ijin: "https://forms.gle/uDGwNzSmohWK22kR9"
        };

        function openForm(type) {
            if (formLinks[type].includes("PASTE_LINK")) {
                alert("Silahkan ganti link Google Forms di kode terlebih dahulu!");
                return;
            }
            window.open(formLinks[type], '_blank');
        }
    </script>
